{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fundamentals",
  "version": "0.1.0",

  "identifier": "com.fundamentals-tauri.app",
  "build": {
    "beforeDevCommand": "cd ../fundamentals-web && bun run dev",
    "devUrl": "http://localhost:5173/plot/0?ws=ws://localhost:3031/ws",
    "beforeBuildCommand": "cd ../fundamentals-web && bun run build",
    "frontendDist": "../fundamentals-web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fundamentals",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "url": "/plot/0?ws=ws://localhost:3031/ws"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset: 'unsafe-inline' 'unsafe-eval'",
        "connect-src": "ipc: http://ipc.localhost ws: wss: ws://localhost:3031/ws",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
